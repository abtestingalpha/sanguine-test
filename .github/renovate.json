{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":gitSignOff"
  ],
  "commitBodyTable": true,
  "semanticCommits": "enabled",
  "labels": [
    "dependencies"
  ],
  "additionalBranchPrefix": "{{parentDir}}-",
  "assigneesFromCodeOwners": true,
  "assignees": [],
  "bumpVersion": "minor",
  "fetchReleaseNotes": true,
  "draftPR": true,
  "cloneSubmodules": true,
  "forkProcessing": "enabled",
  "repositories": ["synapsecns/sanguine"],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "excludePackagePrefixes": [],
      "matchManagers": [
        "gomod"
      ],
      "automerge": false,
      "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
      ]
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "stabilityDays": 3
    },
    {
      "matchPackagePrefixes": [
        "@openzeppelin/"
      ],
      "prPriority": 1,
      "stabilityDays": 0
    }
  ],
  "updateInternalDeps": true,
  "transitiveRemediation": true,
  "branchConcurrentLimit": 9,
  "prConcurrentLimit": 9,
  "git-submodules": {
    "enabled": true
  },
  "postUpgradeTasks": {
    "commands": [
      "./make/scripts/tidy.sh"
    ],
    "fileFilters": [],
    "executionMode": "update"
  },
  "allowPostUpgradeCommandTemplating": true,
  "autodiscover": true
}
